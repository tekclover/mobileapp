<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_notification_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_notification"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:padding="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_matter" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/notification_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:fontFamily="@font/roboto_slab_semi_bold"
                android:textColor="@color/color_devil_blue"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintStart_toEndOf="@+id/img_notification"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Matter" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/notification_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="@font/roboto_slab_regular"
                android:textColor="@color/color_devil_blue"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintStart_toEndOf="@+id/img_notification"
                app:layout_constraintTop_toBottomOf="@+id/notification_header"
                tools:text="hgfhjdgfhjgfhjgfhjgjkb" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>